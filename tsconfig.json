{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/types"
    ],
    "paths": {
      // api
      "@api/*": [
        "src/api/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@serialization/*": [
        "src/util/serialization/*"
      ],
      "@service/*": [
        "src/service/*"
      ],
      // const
      "@constant/*": [
        "src/constant/*"
      ],
      // custom
      "@exception/*": [
        "src/custom/exception/*"
      ],
      "@guard/*": [
        "src/custom/guard/*"
      ],
      "@interceptor/*": [
        "src/custom/interceptor/*"
      ],
      // helper
      "@helper/*": [
        "src/helper/*"
      ],
      // module
      "@module/*": [
        "src/module/*"
      ],
      // repository
      "@repository/*": [
        "src/repository/*"
      ],
      //util
      "@util/*": [
        "src/util/*"
      ],
      // models
      "@model/*": [
        "src/model/*"
      ],
    }
  },
}